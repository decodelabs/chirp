{
    "name": "decodelabs/chirp",
    "description": "Tweet parser",
    "type": "library",
    "keywords": [ "tweet", "twitter", "markup", "html" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "repositories": {
    },
    "require": {
        "php": "^8.4",

        "decodelabs/tagged": "^0.20"
    },
    "require-dev": {
        "decodelabs/metamorph": "^0.7",
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Chirp\\": "src/Chirp",
            "DecodeLabs\\Metamorph\\Handler\\": "src/Metamorph"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.10.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
